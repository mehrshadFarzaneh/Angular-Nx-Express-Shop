      "@org/app-config": ["libs/app-config/index.ts"],
      "@org/category": ["libs/category/src/index.ts"],
      "@org/data-access/category": ["libs/data-access/category/src/index.ts"],
      "@org/orders": ["libs/orders/src/index.ts"],
      "@org/products": ["libs/products/src/index.ts"],
      "@org/ui": ["libs/ui/src/index.ts"],
      "@org/users": ["libs/users/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
